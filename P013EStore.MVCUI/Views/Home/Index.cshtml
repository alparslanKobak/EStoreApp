@model HomePageViewModel

@*Bir sayfada birden fazla model kullanabilmek için bir model listesi classı oluşturduk. HomePageViewModel olarak adlandırdık. Böylelikle aynı sayfada Sliders ve Product gibi birden fazla ürün çağırabiliriz.*@

@{
    ViewData["Title"] = "Home Page";
}

<partial name="_Slider" model="Model.Sliders" />


@*Layouttaki scripts sectionunu ekledik

- İlk slider kısmına active eklemek adına script kullandık
*@
@section Scripts{
    <script>
        $(".carousel-item:first").addClass("active")
    </script>

}





<div class="text-center">
    <h1 class="display-4">Popüler Ürünlerimiz'</h1>

</div>

<section class="pb-1">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-c@ontent-center">
           
            <partial name="_ProductPartial" model="Model.Products"/>
           
        </div>
    </div>
</section>

<div class="text-center">
    <h1 class="display-4">En Popüler Markalar'</h1>

</div>

<section class="pb-1">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-c@ontent-center">

            @foreach (var item in Model.Brands)
            {
               @if (!string.IsNullOrEmpty(item.Logo))
                {
                    <div class="col">
                        <a href="/Brands/Index/@item.Id">
                            <img src="/Img/@item.Logo" alt="" />
                        </a>
                    </div>
                }
            }
           
        </div>
    </div>
</section>

<div class="text-center mt-3">


    <h3 class="display-4">
        <a class="nav-link text-dark" asp-action="Index" asp-controller="News">Bizden Haberler</a>
        </h3>

</div>

<section class="pb-1">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-c@ontent-center">

            @foreach (var item in Model.News)
            {
                @if (!string.IsNullOrEmpty(item.Image))
                {
                    <div class="col">
                        <a class="nav-link text-dark" href="/News/Detail/@item.Id">
                            <img src="/Img/@item.Image" class="img-thumbnail" alt="" />
                            <h3>@item.Title</h3>
                        </a>
                    </div>
                }
            }

        </div>
    </div>
</section>