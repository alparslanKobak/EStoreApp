@model News
@{
    ViewData["Title"] = Model.Title + "Detay";
}

<h1>@Model.Title</h1>

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">

            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-6" src="/Img/@Model.Image" alt="@Model.Title" />
            </div>

            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">@Model.Title</h1>

                <p class="lead">@Html.Raw(Model.Description)</p>

                <p>Eklenme Tarihi : @String.Format("{0:d}",Model.CreateDate)</p>

               @* yalnıca gün olarak belirtmek için böyle bir sistem yarattık*@
            </div>

        </div>
    </div>


    </div>
</section>